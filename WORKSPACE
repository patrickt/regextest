_ALL_CONTENT = """\
filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
"""

http_archive(
    name = "onigmo",
    build_file_content = _ALL_CONTENT,
    strip_prefix = "onigmo-6.2.0",
    urls = [
        "https://github.com/k-takata/Onigmo/releases/download/Onigmo-6.2.0/onigmo-6.2.0.tar.gz"
    ]
